<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextInputWidgetStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/common_text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="endIconMode">custom</item>
        <item name="android:textColorHint">@color/common_text_input_layout_hint_color</item> <!-- unfocused hint -->
        <item name="hintTextColor">@color/apple</item> <!-- focused hint -->
        <item name="errorTextColor">@color/red_orange</item>
        <item name="boxStrokeErrorColor">@color/red_orange</item>
        <item name="android:clickable">true</item>
        <item name="helperTextTextColor">@color/common_text_input_layout_hint_color</item> <!-- helper color -->
    </style>

    <style name="CommonTextInputEditTextStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/common_text_input_layout_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_2x33_apple</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonTextCaption">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0.25dp</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>

    <style name="BottomSheetDialogCircle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>
</resources>